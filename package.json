{
	"name": "better-auth-ui-svelte",
	"version": "0.1.0",
	"description": "Pre-built authentication UI components for Better Auth in Svelte 5",
	"scripts": {
		"dev": "vite dev",
		"prebuild": "tsx scripts/prebuild.ts",
		"postbuild": "tsx scripts/postbuild.ts",
		"build": "pnpm run prebuild && vite build && npm run prepack && pnpm run postbuild",
		"ci:publish": "pnpm prepack && changeset publish",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"prepare": "pnpm run sync || echo ''",
		"prepack": "pnpm run sync && pnpm run prebuild && svelte-package && publint",
		"check": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"docker:up": "docker-compose -f ./compose.yaml up -d",
		"docker:down": "docker-compose -f ./compose.yaml down",
		"docker:destroy": "docker-compose -f ./compose.yaml down -v",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@lucide/svelte": "^0.400.0",
		"better-auth": "^1.3.0",
		"bits-ui": "^2.0.0",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.4",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@types/node": "^22",
		"@types/nodemailer": "^7.0.3",
		"@vitest/browser": "^3.2.4",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.6",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"formsnap": "^2.0.1",
		"globals": "^16.4.0",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.14",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"sveltekit-superforms": "^2.26.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.14",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.1.10",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"better-auth",
		"authentication",
		"auth",
		"ui-components",
		"forms",
		"signin",
		"signup"
	],
	"author": "Better Auth UI Contributors",
	"license": "MIT",
	"dependencies": {
		"@better-fetch/fetch": "^1.1.18",
		"@tanstack/svelte-form": "^1.23.8",
		"better-auth": "^1.3.34",
		"nanostores": "^1.0.1",
		"nodemailer": "^7.0.10",
		"postgres": "^3.4.7",
		"svelte-sonner": "^1.0.5",
		"zod": "^4.1.12"
	},
	"engines": {
		"pnpm": ">=9.0.0",
		"node": ">=20"
	},
	"packageManager": "pnpm@9.14.4"
}