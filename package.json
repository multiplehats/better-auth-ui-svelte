{
	"name": "better-auth-ui-svelte",
	"version": "0.4.0",
	"description": "Pre-built authentication UI components for Better Auth in Svelte 5",
	"scripts": {
		"dev": "vite dev",
		"prebuild": "tsx scripts/prebuild.ts",
		"postbuild": "tsx scripts/postbuild.ts",
		"build": "pnpm run prebuild && vite build && npm run prepack && pnpm run postbuild",
		"ci:publish": "pnpm prepack && changeset publish",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"prepare": "pnpm run sync || echo ''",
		"prepack": "pnpm run sync && pnpm run prebuild && svelte-package && cp src/lib/style.css dist/style.css && publint",
		"check": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm run sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"docker:up": "docker-compose -f ./compose.yaml up -d",
		"docker:down": "docker-compose -f ./compose.yaml down",
		"docker:destroy": "docker-compose -f ./compose.yaml down -v",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./css": "./dist/style.css",
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
